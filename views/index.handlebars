<h1>Eat-Da-Burger!</h1>

<li>
	{{name}}

	<button class="change-devour" data-id="{{id}}" data-newdev="{{devour}}">
		DEVOUR IT!
	</button>
</li>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Enter a burger you want to eat. Click the "Submit" button.</label><br>
  </div>

  <button type="submit">Submit</button>
</form>
